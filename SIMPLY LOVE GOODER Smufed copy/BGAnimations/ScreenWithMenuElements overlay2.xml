<ActorFrame><children>
	<!-- This Updates The Clock -->
                <!-- The Clock -->
                <Layer
                Type="BitmapText"
                Font="_wendy score"
                SetCommand="%function(self)
                		self:finishtweening()
                		self:settext( string.format('%02i:%02i', Hour(), Minute()) )
                end"
                PulseMessageCommand="playcommand,Set"
                Text=""
                InitCommand="x,SCREEN_RIGHT-5;y,SCREEN_BOTTOM-5;shadowlength,0;horizalign,right;vertalign,bottom;zoom,0.2;playcommand,Set"
        />

</children></ActorFrame>